<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 네비게이션 뷰 스타일 설정 -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/gothic</item>
    </style>

    <!-- datepickerdialog 스타일 설정 -->
    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 상단 색 변경-->
        <item name="colorAccent">#82A1DD</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">#82A1DD</item>
        <item name="colorControlHighlight">#82A1DD</item>
        <!-- 취소, 확인 버튼 색상 -->
        <item name="android:textColor">#82A1DD</item>
        <!-- 글꼴 설정 -->
        <item name="android:fontFamily">@font/gothic</item>
    </style>

    <style name="MySpinner" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/gothic</item>
    </style>
</resources>