<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.NicknameActivity">

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="185dp"
        android:src="@drawable/ic_blueline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nickname_title" />

    <TextView
        android:id="@+id/nickname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="175dp"
        android:fontFamily="@font/gothic"
        android:lineSpacingExtra="9sp"
        android:text="반가워요,\n사용하실 닉네임을 입력해 주세요!"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nickNameEdit"
        android:layout_width="383dp"
        android:layout_height="58dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/ic_name_edit"
        android:ems="10"
        android:fontFamily="@font/gothic"
        android:gravity="center"
        android:hint="입력하세요!"
        android:inputType="textPersonName"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView19" />

    <Button
        android:id="@+id/nickSaveBtn"
        android:layout_width="108dp"
        android:layout_height="49dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="123dp"
        android:background="@drawable/ic_save_btn"
        android:fontFamily="@font/gothic"
        android:text="저장"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickNameEdit" />

</androidx.constraintlayout.widget.ConstraintLayout>