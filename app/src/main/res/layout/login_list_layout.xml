<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/listImage"
            android:layout_width="392dp"
            android:layout_height="106dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_commu_list" />

        <TextView
            android:id="@+id/petName"
            android:layout_width="78dp"
            android:layout_height="18dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/gothic"
            android:gravity="center"
            android:text="이름"
            android:textColor="#252525"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/listImage"
            app:layout_constraintStart_toStartOf="@+id/listImage"
            app:layout_constraintTop_toTopOf="@+id/listImage" />

        <TextView
            android:id="@+id/petBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/gothic"
            android:gravity="center"
            android:text="생년월일"
            android:textColor="#252525"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/petName"
            app:layout_constraintTop_toTopOf="@id/listImage" />

        <TextView
            android:id="@+id/petSpec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gothic"
            android:gravity="center"
            android:text="종"
            android:textColor="#252525"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/petName"
            app:layout_constraintTop_toBottomOf="@+id/petBirth"
            app:layout_constraintVertical_bias="0.117" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>